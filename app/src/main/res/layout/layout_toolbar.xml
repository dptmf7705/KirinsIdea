<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.kirinsidea.ui.folderlist.FolderListViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorSilver"
        app:layout_scrollFlags="scroll|enterAlways">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_folderName"
            style="@style/TextView.XLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_large_18dp"
            android:layout_marginTop="@dimen/space_xsmall_8dp"
            android:layout_marginBottom="@dimen/space_xsmall_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{vm.selectedItem.name}"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_search"
            style="@style/ImageButton.Median"
            android:layout_margin="@dimen/space_xlarge_24dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_folder"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_folder"
            style="@style/ImageButton.Median"
            android:src="@drawable/ic_icon_bm_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/space_large_18dp"
            android:onClick="@{()->vm.toggleDrawer(true)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>