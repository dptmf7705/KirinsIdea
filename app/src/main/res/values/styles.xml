<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_brown</item>
        <item name="colorPrimaryDark">@color/bg_brown</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowBackground">@color/bg_brown</item>
        <item name="android:textColorPrimary">@color/text_grey_trans</item>
    </style>

    <style name="SignUpTheme" parent="SplashTheme">
        <item name="colorControlNormal">@color/yellow_light</item>
        <item name="colorControlActivated">@color/yellow_light</item>
        <item name="colorControlHighlight">@color/yellow_light</item>
        <item name="android:textColorHint">@color/yellow_light</item>
    </style>

    <style name="CalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorPrimary">@color/yellow_light</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorControlNormal">@color/yellow_light</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/yellow</item>
        <item name="android:textColorHint">@color/yellow_light</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Bottom Navigation 스타일 -->
    <style name="BottomNavigation.InActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
    </style>

    <style name="BottomNavigation.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
    </style>

</resources>
