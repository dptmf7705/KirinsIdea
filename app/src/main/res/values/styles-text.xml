<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 텍스트뷰 -->
    <style name="Kirins.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- SingleLine DP -->
    <style name="SingleLineText" parent="Kirins.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SingleLineText.20dp" parent="SingleLineText">
        <item name="android:textSize">@dimen/text_title_20dp</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_20dp</item>
    </style>

    <style name="SingleLineText.16dp" parent="SingleLineText">
